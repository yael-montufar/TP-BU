class BannerCarouselColumns extends HTMLElement {
  constructor() {
    super();
  }

  connectedCallback() {
    const mobileCarousel = this.querySelector('.mobile-carousel');
    const slides = this.querySelectorAll('.mobile-carousel-slide');
    const dots = this.querySelectorAll('.carousel-dot');

    let activeSlide = 0;

    const updateCarousel = () => {
      slides.forEach((slide, index) => {
        slide.style.display = index === activeSlide ? 'flex' : 'none';
        dots[index].classList.toggle('active', index === activeSlide);
      });
    };

    dots.forEach((dot, index) => {
      dot.addEventListener('click', () => {
        activeSlide = index;
        updateCarousel();
      });
    });

    updateCarousel();
  }
}

customElements.define('c4m-banner--carousel-columns', BannerCarouselColumns);
