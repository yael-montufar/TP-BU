.footer {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 64px;
  padding-bottom: 16px;
}

.footer-logo {
  margin-bottom: 2rem;
}

.footer h4 {
  font-weight: 600;
  font-size: 1em;
}

/* .footer-columns {
  display: flex;
