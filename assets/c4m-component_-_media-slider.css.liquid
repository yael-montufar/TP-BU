/* Fix Mobile Layout */
media-gallery {
  display: grid;
}

._custom_-_dot-container {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  flex-wrap: wrap;
  gap: 12px;
  
  position: absolute;
  bottom: 0px;

  padding: 0px;
  z-index: 2;
  mix-blend-mode: difference;
}

._custom_-_dot {
  display: flex;
  flex-shrink: 0;
  width: 16px;
  height: 16px;
  
  border: 2px solid white;
  border-radius: 50%;
  background: transparent;
  opacity: .5;
  
  cursor: pointer;
  list-style: none;

  mix-blend-mode: difference;
}


/* [data-slide-to="this.currentPage<CustomSliderComponent>"] */
._custom_-_dot.active {
  background: white;
  opacity:1;
  mix-blend-mode: difference;
}


/* [id^=QuickAddInfo-] is parent of [c4m-media-slider] */
[id^=QuickAddInfo-] c4m-media-slider ._custom_-_dot-container {
  display: none;
}




/* DESKTOP/ -------------------------------- */
@media screen and (min-width: 990px) {
  ._custom_-_dot-container {
    visibility: hidden;
  }
}
