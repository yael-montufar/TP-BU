/* ================ IMAGE-WITH-TEXT/ ================ */

/* Remove media border */
.image-with-text__grid {
  --media-border-width: 0px
}

/* Adjust image */
.image-with-text__grid img {
  object-fit: contain;
}

/* Make button appear clickable */
.image-with-text__grid a:not([href]) {
  cursor: pointer;
}



/* MOBILE/ -------- */
@media screen and (max-width: 749px) {
  /* Reorder content/media */
  .image-with-text__grid--reverse {
    flex-direction: column-reverse;
  }
}
