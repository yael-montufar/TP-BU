/* ================ C4M-COLLAPSIBLE-TAB/ ================ */

/* Style product-benefits collapsible tab */
[data-block-style="product-benefits"] .rte ul {
  list-style-type: none;
}

/* Style how-it-works collapsible tab ol li markers */
[data-block-style="how-it-works"] .rte ol {
  list-style: none;
  counter-reset: how-it-works-steps;
}
[data-block-style="how-it-works"] .rte ol li {
  counter-increment: how-it-works-steps;
}
[data-block-style="how-it-works"] .rte ol li::before {
  content: counter(how-it-works-steps);
  background: #3ab8f1;
  width: 3rem;
  height: 3rem;
  margin-right: 1.5rem;
  border-radius: 50%;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  line-height: 2rem;
  color: white;
  text-align: center;

  vertical-align: middle;
}
