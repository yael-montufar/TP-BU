/* ================ TEXT-BADGE/ ================ */

.slider-text-badge__badge___center-text {
  flex-direction: column;
}

.slider-text-badge__badge___center-text span:first-child {
  display: block;
  font-size: 3rem;
}
.slider-text-badge__badge___center-text span:last-child {
  display: block;
  font-size: 2rem;
}

.slider-text-badge__badge___center-text {
  line-height: 3rem !important;
/*   line-height: unset !important; */
}

.slider-text-badge__sizer {
  border-radius: 50%;
  background-color: #61b6ea;
  padding: 1.5rem;
  transform: scale(0.6) !important;
}
.slider-text-badge__badge___upper-text,
.slider-text-badge__badge___center-text,
.slider-text-badge__badge___lower-text {
  color: white !important;
  fill: white !important;
}




/* MOBILE/ -------- */
@media screen and (max-width: 749px) {
  .slider-text-badge__sizer {
    transform: scale(0.5) !important;
  }
}
