.collection__view-all .button:before {
  background-color: #77D3AF;
}
.collection__view-all .button {
  --icon-offset: 1.5rem;
  
  background-color: unset;
  border-radius: 4px;
  overflow: hidden;
  color: white;

  padding-left: calc(30px + var(--icon-offset) + 1rem);
}
.collection__view-all .button:after {
  content: "";
    position: absolute;
    left: calc(30px); /* Adjust this value as needed */
    top: 50%;
    width: var(--icon-offset); /* Set the width of the icon */
    height: var(--icon-offset); /* Set the height of the icon */
    background-image: url('{{ 'cart-icon.svg' | asset_url }}');
    background-size: contain;
    background-repeat: no-repeat;
    background-position: center;
    transform: translateY(-50%) translateX(0%);
  
    box-shadow: unset;
    filter: invert(100%) sepia(0%) saturate(7479%) hue-rotate(70deg) brightness(99%) contrast(107%);
}







.slide-cta:before {
  content: "";
  background-color: #3ab8f1;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: -1;
}
.slide-cta:hover:before {
  background-color: #2e3054;
}
.slide-cta {
  --icon-offset: 1.5rem;
  
  background-color: unset;
  border-radius: 4px;
  overflow: hidden;
  color: white;

  padding-right: calc(30px + var(--icon-offset) + 1rem);
  position: relative;
}
.slide-cta:after {
    content: "";
    position: absolute;
    right: calc(30px); /* Adjust this value as needed */
    top: 50%;
    width: var(--icon-offset); /* Set the width of the icon */
    height: var(--icon-offset); /* Set the height of the icon */
    background-image: url('{{ 'arrow-icon.svg' | asset_url }}');
    background-size: contain;
    background-repeat: no-repeat;
    background-position: center;
    transform: translateY(-50%) translateX(0%);
  
    box-shadow: unset;
/*     filter: invert(100%) sepia(0%) saturate(7479%) hue-rotate(70deg) brightness(99%) contrast(107%); */
}
