.global-media-settings {
  border: unset;
}
.image-with-text img {
  object-fit: contain;
}

.image-with-text a:after,
.image-with-text a:before {
  display: none !important;
}

.image-with-text a {
  color: rgb(var(--color-foreground));
  border: 1px solid currentcolor;
  background: white;
  border-radius: 6px;
}
.image-with-text a:hover {
  color: #3ab8f1;
  border: 1px solid #3AB8F1;
}
.image-with-text a:hover > svg {
  transform: translate(0.5rem, 0%)
}


.multicolumn-card__info {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  display: flex;
  padding: 0 !important;
/*   left: 50%;
  transform: translateX(-50%);
  width: 100%; */
}
.multicolumn-card__info h3 {
  font-size: 3rem;
  text-align: center;
  align-self: flex-end;
  width: 100%;
  margin-bottom: 25% !important;
}

.multicolumn-card__info .link {
  position: absolute;
  content: "";
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  visibility: hidden;
  margin: 0;
  margin-top: 0rem !important;
}
.multicolumn-card__info .link:before {
  position: absolute;
  content: "";
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  visibility: visible;
}

.multicolumn-card__image-wrapper {
  margin: 0 !important;
}


.multicolumn-list {
  gap: 2rem;
}
.multicolumn-list .multicolumn-list__item {
  flex: 1;
  width: unset!important;
}





