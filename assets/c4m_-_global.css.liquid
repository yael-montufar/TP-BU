  --color-base-text: 46, 48, 84;
  --color-foreground: var(--color-base-text);
}

/* ================ /TEXT-COLOR ================ */








/* ================ CART-BADGE-COLOR/ ================ */

.cart-count-bubble {
--color-button: 58, 184, 241;
}

/* ================ /CART-BADGE-COLOR ================ */








/* ================ DEFAULT DAWN CART DRAWER/ ================ */

cart-drawer.drawer {
  display: none !important;
}

/* ================ /DEFAULT DAWN CART DRAWER ================ */








/* ================ MAIN-CONTENT-CONTAINER/ ================ */

#MainContent {
  overflow: hidden;
}

/* ================ /MAIN-CONTENT-CONTAINER ================ */








/* ================ ADD-TO-CART-BUTTON/ ================ */

product-form.product-form button {
    padding: 1rem;
    background: #77D3AF;
    border-radius: 6px;
    color: white;
    text-decoration: none;
    font-weight: 600;
}
product-form.product-form button:after {
  box-shadow: unset;
}
.button:not([disabled]):hover:after {
  box-shadow: unset;
}

/* ================ /ADD-TO-CART-BUTTON ================ */








/* ================ ICON-WITH-TEXT/ ================ */

ul.icon-with-text {
  --icon-size: 6rem;
}
ul.icon-with-text .h4 {
  font-weight: var(--font-body-weight);
}

/* ================ /ICON-WITH-TEXT ================ */








/* ================ QUICK-ADD-BUTTON/ ================ */

button.quick-add__submit {
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: transparent;
  border: 1px solid black;
  color: black;
  padding: 0;
  font-size: 16px;
  border-radius: 5px;
  cursor: pointer;
  text-decoration: none;
  transition: background-color 0.3s;
}

button.quick-add__submit:hover {
  background-color: rgba(0, 0, 0, 0.1);
}

/* ================ /QUICK-ADD-BUTTON ================ */
