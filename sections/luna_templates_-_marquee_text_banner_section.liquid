<section id="LT--{{ section.id }}" class="LT__section luna-templates__marquee-text-banner {{ section.settings.css_class }}">
  {%- if section.settings.link_url != blank -%}
      <a href="{{ section.settings.link_url }}">
  {%- endif -%}
  <div class="luna-templates__marquee-bar">
    <span class="luna-templates__marquee-bar-content">
      {%- for i in (1..5) -%}
        {%- for block in section.blocks -%}
          <span id="block-{{ block.id }}" class="luna-templates__marquee-item"  {{ block.shopify_attributes }}>
            {%- if block.settings.image != blank -%}
              {{ block.settings.image | image_url: width: 500 | image_tag }}
            {%- endif -%}
            {%- if block.settings.text != blank -%}
              {{ block.settings.text }}
            {%- endif -%}
            <style>
            @media screen and (max-width: 768px) {
              #block-{{ block.id }}.luna-templates__marquee-item img {
                width: {{ block.settings.image_width_mobile }}px;
              }
              #block-{{ block.id }}.luna-templates__marquee-item {
                grid-template-columns: {% if block.settings.image != blank %}{{ block.settings.image_width_mobile }}px {% endif %}auto;
              }
            }
            @media screen and (min-width: 769px) {
              #block-{{ block.id }}.luna-templates__marquee-item img {
                width: {{ block.settings.image_width }}px;
              }
              #block-{{ block.id }}.luna-templates__marquee-item {
                grid-template-columns: {% if block.settings.image != blank %}{{ block.settings.image_width }}px {% endif %}auto;
              }
            }
            </style>
          </span>
        {%- endfor -%}
      {%- endfor -%}
    </span>
    <span class="luna-templates__marquee-bar-content">
      {%- for i in (1..5) -%}
        {%- for block in section.blocks -%}
          <span id="block-{{ block.id }}" class="luna-templates__marquee-item"  {{ block.shopify_attributes }}>
            {%- if block.settings.image != blank -%}
              {{ block.settings.image | image_url: width: 500 | image_tag }}
            {%- endif -%}
            {%- if block.settings.text != blank -%}
              {{ block.settings.text }}
            {%- endif -%}
            <style>
            @media screen and (max-width: 768px) {
              #block-{{ block.id }}.luna-templates__marquee-item img {
                width: {{ block.settings.image_width_mobile }}px;
              }
              #block-{{ block.id }}.luna-templates__marquee-item {
                grid-template-columns: {% if block.settings.image != blank %}{{ block.settings.image_width_mobile }}px {% endif %}auto;
              }
            }
            @media screen and (min-width: 769px) {
              #block-{{ block.id }}.luna-templates__marquee-item img {
                width: {{ block.settings.image_width }}px;
              }
              #block-{{ block.id }}.luna-templates__marquee-item {
                grid-template-columns: {% if block.settings.image != blank %}{{ block.settings.image_width }}px {% endif %}auto;
              }
            }
            </style>
          </span>
        {%- endfor -%}
      {%- endfor -%}
    </span>
  </div>
  {%- if section.settings.link_url != blank -%}</a>{%- endif -%}
</section>
