{%- capture minify -%}
{%- style -%}
#LT--{{ section.id }} {
  background: {{ section.settings.color_bg }};
  border-top: {{ section.settings.border_width }}px solid {{ section.settings.color_border }};
  border-bottom: {{ section.settings.border_width }}px solid {{ section.settings.color_border }};
  color: {{ section.settings.color_text }};
  padding-top: {{ section.settings.padding }}px;
  padding-bottom: {{ section.settings.padding }}px;
  position: relative;
  overflow: hidden;
  width: 100vw;
  margin: -1px 0;
}

#LT--{{ section.id }} .luna-templates__marquee-bar {
  display: flex;
  flex-wrap: nowrap;
  white-space: nowrap;
  height: 100%;
  min-width: 100%;
}

#LT--{{ section.id }} .luna-templates__marquee-item {
  align-items: center;
/*  Custom âˆ†  */
/*   display: grid; */
  display: flex;
  max-height: {{section.settings.max_height}}px;
}

#LT--{{ section.id }} .luna-templates__marquee-bar-content {
  animation: {% if section.settings.direction == "reverse" %}lt-marquee-right{% else %}lt-marquee{% endif %} {{ section.settings.speed }}s linear infinite;
  display: flex;
}

#LT--{{ section.id }} p {
  margin: 0;
  color: {{ section.settings.color_text }};
  font-size: {{ section.settings.text_size }}px;
  padding-left: 20px;
  padding-right: {{ section.settings.item_padding }}px;
  line-height: 1;
}

#LT--{{ section.id }} a {
  color: {{ section.settings.color_text }};
}

#LT--{{ section.id }} a {
  text-decoration: none;
}

#LT--{{ section.id }} .luna-templates__marquee-item img {
  display: inline-block;
  height: auto;
}

@media screen and (max-width: 768px) {
  #LT--{{ section.id }} p {
    font-size: {{ section.settings.text_size_mobile }}px;
  }

{%- if section.settings.mobile_hide == true -%}
  #LT--{{ section.id }} {
    display: none;
  }
{%- endif -%}
  
}

@keyframes lt-marquee {
  0% {
    -webkit-transform: translateX(0);
    -moz-transform: translateX(0);
    transform: translateX(0);
  }
  100% {
    -webkit-transform: translateX(-100%);
    -moz-transform: translateX(-100%);
    transform: translateX(-100%);
  }
}

@keyframes lt-marquee-right {
  0% {
    -webkit-transform: translateX(-100%);
    -moz-transform: translateX(-100%);
    transform: translateX(-100%);
  }
  100% {
    -webkit-transform: translateX(0);
    -moz-transform: translateX(0);
    transform: translateX(0);
  }
}

@media (prefers-reduced-motion: reduce) {
  .luna-templates__marquee-text-banner span {
    animation: none;
    width: auto;
    display: block;
    text-align: center;
    white-space: normal;
  }
}

