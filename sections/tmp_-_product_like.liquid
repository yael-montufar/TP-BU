{% schema %}
  {
    "name": "Like Products",
	"class": "licke__secprod",
    "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Like Products Title"
    }
  ],
  "blocks": [
     {
       "name": "Product",
       "type": "slide",
       "settings": [
         {
           "type": "product",
           "id": "product_slide",
           "label": "product"
         }
       ]
     }
   ]
  }
{% endschema %}

{% stylesheet %}

.section_like-product{
	padding: 80px 0 100px;
	background: #D8EBFB;
}
.section_like-product h5{
	text-align: center;
/* 	font-family: KlarheitKurrent; */
  	font-weight: 700;
  	margin-bottom: 50px;
  	text-transform: capitalize;
  	font-size: 32px;
}
.LikeSwiper.swiper{
	height: 400px;
	max-width: 1280px;
	margin: 0 auto;
	padding: 0 80px;
}
.LikeSwiper.swiper::before, .LikeSwiper.swiper::after{
	content: '';
	background: #D8EBFB;
	position: absolute;
	height: 100%;
	top: 0;
	bottom: 0;
	width: 80px;
	z-index: 2;
}
.LikeSwiper.swiper::before{
	left: 0;
}
.LikeSwiper.swiper::after{
	right: 0;
}
.section_like-item{
	max-width: 365px;
	margin: 0 auto;
}
.section_like-item .like-img{
	width: 100%;
	height: 260px;
    background-repeat: no-repeat;
    background-size: cover;
	display: block;
}
.like-title{
/*     font-family: AvertaCY; */
    font-size: 18px;
    color: #2e3054;
    text-transform: inherit;
    letter-spacing: .04em;
    padding: 0;
    font-weight: 600;
}
.devider {
	border-left: 1px solid #2E3054;
	margin: 0 15px;
}
.like__btn_cart {
    width: 140px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: transparent;
    border-radius: 6px;
    font-size: 14px;
    font-weight: 600;
/*     font-family: AvertaCY; */
    color: #2E3054;
    margin-top: auto;
	border: 1px solid #2E3054;
	transition: all 0.4s ease;
}
.like__btn_cart:hover{
	background: #fff;
}
.like__btn_cart i {
    display: flex;
    margin-right: 8px;
}
.like-img {
  background-color: #f8f9fd;
  background-position: center;
}
.like_button-block{
	display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
	margin-top: 20px;
}
.like_button-block label{
	margin-right: 10px;
	cursor: pointer;
	position: relative
	margin-bottom: 0;
}
.like_button-block label input{
	display: none;
}
.like_button-block label span{
	border: #e2e2e2 1px solid;
	width: 55px;
	height: 25px;
	display: flex;
	position: relative;
}
.like_button-block label input + span i{
	display: none
}
.like_button-block label input:checked + span i{
	display: block;
	background: #2E3054;
	height: 2px;
	width: 100%;
	position:absolute;
	bottom: -10px;
}
.like_button-block label span.blue-color{
	background: #a3cbf1;
}
.like_button-block label span.white-color{
	background: #fff;
}
.like_button-block label span.clear-color{
	background: #D7E5F1;
}
.like_button-block label span.green-color{
	background: green;
}

.like-option{
	display: flex;
    flex-wrap: wrap;
	align-items: center;
}

.LikeSwiper .swiper-button-prev {
 	background-image: url("data:image/svg+xml;charset=UTF-8,%3csvg width='18' height='18' viewBox='0 0 18 18' fill='none' xmlns='http://www.w3.org/2000/svg'%3e%3cpath fill-rule='evenodd' clip-rule='evenodd' d='M8.78033 3.96967C9.07322 4.26256 9.07322 4.73744 8.78033 5.03033L5.56066 8.25H14.25C14.6642 8.25 15 8.58579 15 9C15 9.41421 14.6642 9.75 14.25 9.75H5.56066L8.78033 12.9697C9.07322 13.2626 9.07322 13.7374 8.78033 14.0303C8.48744 14.3232 8.01256 14.3232 7.71967 14.0303L3.21967 9.53033C2.92678 9.23744 2.92678 8.76256 3.21967 8.46967L7.71967 3.96967C8.01256 3.67678 8.48744 3.67678 8.78033 3.96967Z' fill='%232E3054'/%3e%3c/svg%3e ") !important;
	background-repeat: no-repeat;
    background-position: center;
} 
.LikeSwiper .swiper-button-next {
	background-image: url("data:image/svg+xml;charset=UTF-8,%3csvg width='18' height='18' viewBox='0 0 18 18' fill='none' xmlns='http://www.w3.org/2000/svg'%3e%3cpath fill-rule='evenodd' clip-rule='evenodd' d='M9.21967 3.96967C8.92678 4.26256 8.92678 4.73744 9.21967 5.03033L12.4393 8.25H3.75C3.33579 8.25 3 8.58579 3 9C3 9.41421 3.33579 9.75 3.75 9.75H12.4393L9.21967 12.9697C8.92678 13.2626 8.92678 13.7374 9.21967 14.0303C9.51256 14.3232 9.98744 14.3232 10.2803 14.0303L14.7803 9.53033C15.0732 9.23744 15.0732 8.76256 14.7803 8.46967L10.2803 3.96967C9.98744 3.67678 9.51256 3.67678 9.21967 3.96967Z' fill='%232E3054'/%3e%3c/svg%3e ") !important;
	background-repeat: no-repeat;
    background-position: center;
}
.LikeSwiper .swiper-button-prev::after, .LikeSwiper .swiper-button-next::after{
	display: none;
}
.LikeSwiper .swiper-button-prev, .LikeSwiper .swiper-button-next{
	width: 48px;
    height: 48px;
    background-color: #fff;
    border-radius: 50%;
}
{% endstylesheet %}

