{%- if section.settings.override_theme_font != blank -%}
  {%- for font in font_array -%}
    {%- unless font contains 'error' -%}{{ font }}{%- endunless -%}
  {%- endfor -%}
  #DP--{{ section.id }} {
    --main-font: {{ section.settings.main_font.family }}, {{ section.settings.main_font.fallback_families }};
    --main-font-weight: {{ section.settings.main_font.weight }};
    --main-font-style: {{ section.settings.main_font.style }};
    --heading-font: {{ section.settings.heading_font.family }}, {{ section.settings.heading_font.fallback_families }};
    --heading-font-weight: {{ section.settings.heading_font.weight }};
    --heading-font-style: {{ section.settings.heading_font.style }};
  }
{%- endif -%}

#DP--{{ section.id }} {
  --slideshow-color: #FFFFFF;
  width: 100%;
  margin-left: auto;
  margin-right: auto;
  max-width: {{ max_width }};
  margin-top: {{ section.settings.outer_margin_top }}px;
  margin-bottom: {{ section.settings.outer_margin_bottom }}px;
}

#DP--{{ section.id }} .dsgn-pck__sizer {
  width: 85%;
}

#DP--{{ section.id }} .dsgn-pck__background {
  width: 100%;
}

#DP--{{ section.id }} .dsgn-pck__slide picture::after {
  content: '';
  display: block;
  position: absolute;
  top: 0;
  bottom: 0;
  right: 0;
  left: 0;
  z-index: 1;
}

#DP--{{ section.id }} .dsgn-pck__slide {
  width: 100%;
}

#DP--{{ section.id }} .dsgn-pck__grid {
  height: 100%;
}

#DP--{{ section.id }} .dsgn-pck__content {
  z-index: 2;
  height: 100%;
  grid-template-columns: 1fr;
  grid-area: 1 / 1 / 2 / 2;
  padding: 5% 0;
}

#DP--{{ section.id }} .dsgn-pck__inner-content {
  z-index: 2;
  width: 100%;
}

#DP--{{ section.id }} .dsgn-pck__small-text {
  margin-top: 0;
  color: {{ section.settings.text_color }};
  line-height: calc(3px + 2ex + 3px);
  font-size: calc(var(--dp-g-body-size, var(--dp-body-size, 18px)) * {{ section.settings.text_size | times: 0.008 }});
  {%- if section.settings.override_theme_font != blank -%}
  font-family: var(--main-font);
  font-weight: var(--main-font-weight);
  font-style: var(--main-font-style);
  {%- endif -%}
}

#DP--{{ section.id }} .dsgn-pck__heading {
  color: {{ section.settings.text_color }};
  line-height: calc(3px + 2ex + 3px);
  font-size: calc(var(--dp-g-heading-size, var(--dp-heading-size, 35px)) * {{ section.settings.text_size | times: 0.01 }});
  {%- if section.settings.override_theme_font != blank -%}
  font-family: var(--heading-font);
  font-weight: var(--heading-font-weight);
  font-style: var(--heading-font-style);
  {%- endif -%}
}

#DP--{{ section.id }} .dsgn-pck__text p {
  color: {{ section.settings.text_color }};
  line-height: calc(3px + 2ex + 3px);
  font-size: calc(var(--dp-g-body-size, var(--dp-body-size, 18px)) * {{ section.settings.text_size | times: 0.01 }});
  {%- if section.settings.override_theme_font != blank -%}
  font-family: var(--main-font);
  font-weight: var(--main-font-weight);
  font-style: var(--main-font-style);
  {%- endif -%}
}

#DP--{{ section.id }} .dsgn-pck__button {
  margin-top: 1.2em;
  display: inline-block;
  text-decoration: none;
  padding: 0.5em 1.2em;
  border: thin solid;
  transition: all 0.3s;
  border-radius: {{ section.settings.button_radius }}px;
  line-height: calc(3px + 2ex + 3px);
  font-size: calc(var(--dp-g-body-size, var(--dp-body-size, 18px)) * {{ section.settings.text_size | times: 0.01 }});
  {%- if section.settings.override_theme_font != blank -%}
  font-family: var(--main-font);
  font-weight: var(--main-font-weight);
  font-style: var(--main-font-style);
  {%- endif -%}
}

/* Slideshow styles */

#DP--{{ section.id }} .flickity-page-dots {
  bottom: 10px;
}

#DP--{{ section.id }} .flickity-page-dots .dot {
  background: var(--slideshow-color);
  transition: all 0.3s ease-in-out;
}

#DP--{{ section.id }} .flickity-button {
  background: transparent;
  color: var(--slideshow-color);
  transition: all 0.3s ease-in-out;
}

{%- if section.settings.slider_animation == 'fade' -%}
  .flickity-enabled.is-fade .flickity-slider > * {
    pointer-events: none;
    z-index: 0;
  }

  .flickity-enabled.is-fade .flickity-slider > .is-selected {
    pointer-events: auto;
    z-index: 1;
  }
{%- endif -%}

{%- if section.settings.custom_css != blank -%}
  {%- assign custom_section_declarations = section.settings.custom_css | split: '}' -%}
  {%- for declaration in custom_section_declarations -%}
    {%- if declaration contains '{' -%}
      #DP--{{ section.id }} {{ declaration }} }
    {%- endif -%}
  {%- endfor -%}
{%- endif -%}

/* Landscape phone to portrait tablet */
@media (max-width: 767px) {

  #DP--{{ section.id }} .flickity-prev-next-button.previous {
    left: 5px;
  }

  #DP--{{ section.id }} .flickity-prev-next-button.next {
    right: 5px;
  }

  #DP--{{ section.id }} .flickity-button-icon {
    width: 40%;
    height: 40%;
    left: 0;
  }

  #DP--{{ section.id }} .next .flickity-button-icon {
    left: auto;
    right: 0;
  }

}

/* Landscape phones and down */
@media (max-width: 480px) {

  #DP--{{ section.id }} .dsgn-pck__inner-content {
    min-width: 100%;
  }

  #DP--{{ section.id }} {
    margin-top: {{ section.settings.outer_margin_top | divided_by: 2 }}px;
    margin-bottom: {{ section.settings.outer_margin_bottom | divided_by: 2 }}px;
  }

  {%- if section.settings.mobile_custom_css != blank -%}
    {%- assign mobile_custom_declarations = section.settings.mobile_custom_css | split: '}' -%}
    {%- for declaration in mobile_custom_declarations -%}
      {%- if declaration contains '{' -%}
        #DP--{{ section.id }} {{ declaration }} }
      {%- endif -%}
    {%- endfor -%}
  {%- endif -%}
}

/* Custom Styles */
#DP--{{ section.id }} .dsgn-pck__slide {
  width: 75%;
}
.dsgn-pck__image__wrapper {
  border-right: 2px solid black;
}

#DP--{{ section.id }} .flickity-page-dots {
  left: 0px;
  width: fit-content;
  bottom: 16px;
}
  
#DP--{{ section.id }} .flickity-page-dots .dot{
  display:inline-block;
  width:12px;
  height:12px;
  margin:0 8px;
  border: 2px solid white;
  background: transparent;
  border-radius:50%;
  opacity:.5;
  cursor:pointer;
  mix-blend-mode: difference;
}
#DP--{{ section.id }} .flickity-page-dots .dot.is-selected {
  opacity:1;
  background: white;
}
  
.flickity-button.flickity-prev-next-button {
/*   display: none; */
}

@media (min-width: 767px) {
  #DP--{{ section.id }} {
    display:none;
  }
}
</style>

{% assign variant_image_list = product.images | map: 'src' %}

{%- comment -%} HTML {%- endcomment -%}
<section id="DP--{{ section.id }}" class="DP--{{ section.id }} dsgn-pck__slideshow dsgn-pck__section">
  
  {%- for block in section.blocks -%}
  <div id="DP--{{ block.id }}" class="DP--{{ block.id }} dsgn-pck__text-badge dsgn-pck__section" data-section-type="dsgn-pck__text-badge" {{ block.shopify_attributes }}>
    <div class="dsgn-pck__sizer dsgn-pck__sizer--badge">
      <div class="dsgn-pck__badge-position">
        <div class="dsgn-pck__badge-rotate">
          <svg class="dsgn-pck__badge" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" viewBox="0 0 200 200">
            <defs>
                <path id="badge-upper-{{ block.id }}" d="M49.78,80c0-27.74,22.49-50.22,50.22-50.22s50.22,22.49,70.22,50.22"/>
            </defs>
            <text class="dsgn-pck__badge__upper-text">
                <textPath xlink:href="#badge-upper-{{ block.id }}" startOffset="50%" text-anchor="middle">
                  {{ block.settings.upper_text }}
                </textPath>
            </text>
            <defs>
              <path id="badge-lower-{{ block.id }}" d="M33.26,120c0,36.86,15.00,66.74,66.74,66.74s66.74-29.88,66.74-66.74"/>
            </defs>
            <text class="dsgn-pck__badge__lower-text">
                <textPath xlink:href="#badge-lower-{{ block.id }}" startOffset="50%" text-anchor="middle">
                  {{ block.settings.lower_text }}
                </textPath>
            </text>
          </svg>
          <div class="dsgn-pck__badge__center-text">
            {{ block.settings.center_text }}
          </div>
        </div>
      </div>
    </div>
  </div>

  <style>
  #DP--{{ block.id }} {
    height: 0 !important;
    padding: 0 !important;
    z-index: 10;
  }
  
  #DP--{{ block.id }} .dsgn-pck__badge {
    display: flex;
    width: {{ block.settings.badge_size }}px;
    height: {{ block.settings.badge_size }}px;
  }
  
  #DP--{{ block.id }} .dsgn-pck__badge-position {
    position: absolute;
    z-index: 2;
    top: 0;
    transform: translateX(-50%) translateY({{ block.settings.badge_vertical_position | times: -1 }}%);
    left: {{ block.settings.badge_horizontal_position }}%;
  }
  
  #DP--{{ block.id }} .dsgn-pck__badge-rotate {
    position: relative;
    transform-origin: center;
    transform: rotate({{ block.settings.angle }}deg);
    {%- if block.settings.rotation_speed > 0 -%}
    -webkit-animation:spin {{ block.settings.rotation_speed }}s linear infinite;
    -moz-animation:spin {{ block.settings.rotation_speed }}s linear infinite;
    animation:spin {{ block.settings.rotation_speed }}s linear infinite;
    {%- endif -%}
  }
  
  #DP--{{ block.id }} .dsgn-pck__badge__upper-text,
  #DP--{{ block.id }} .dsgn-pck__badge__lower-text {
/*     font-size: {{ font_size }}px; */
        font-size: {{ block.settings.badge_size | divided_by: 3 }}px;
    fill: {{ block.settings.text_color }};
    font-family: {{ block.settings.outer_font.family }}, {{ block.settings.outer_font.fallback_families }};
    {%- if block.settings.show_text_shadow != blank -%}
      text-shadow: 1px 1px 10px #847d7da8;
    {%- endif -%}
  }
  
  #DP--{{ block.id }} .dsgn-pck__badge__lower-text {
    letter-spacing: 4px;
  }
  
  #DP--{{ block.id }} .dsgn-pck__badge__center-text {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    text-align: center;
    color: {{ block.settings.text_color }};
    font-family: {{ block.settings.center_font.family }}, {{ block.settings.center_font.fallback_families }};
    font-size: {{ block.settings.badge_size | divided_by: 4 }}px;
    {%- if block.settings.show_text_shadow != blank -%}
      text-shadow: 1px 1px 10px #847d7da8;
    {%- endif -%}
  }
  
  #DP--{{ block.id }} .dsgn-pck__sizer {
    position: relative;
    width: calc(100% - {{ block.settings.badge_size }}px);
  }
  
  @-moz-keyframes spin {
    100% { -moz-transform: rotate(360deg); }
  }
  @-webkit-keyframes spin {
    100% { -webkit-transform: rotate(360deg); }
  }
  @keyframes spin {
    100% {
        -webkit-transform: rotate(360deg);
        transform:rotate(360deg);
    }
  }
  
  {%- if block.settings.custom_css != blank -%}
    {%- assign custom_section_declarations = block.settings.custom_css | split: '}' -%}
    {%- for declaration in custom_section_declarations -%}
      {%- if declaration contains '{' -%}
        #DP--{{ block.id }} {{ declaration }} }
      {%- endif -%}
    {%- endfor -%}
  {%- endif -%}
  
  
  
  /* Landscape phone to portrait tablet */
  @media (max-width: 767px) {
    {%- if block.settings.hide_on_mobile != blank -%}
      #DP--{{ block.id }} {
        display: none;
      }
    {%- endif -%}
  }
  
  /* Landscape phones and down */
  @media (max-width: 480px) {
    {%- if block.settings.mobile_custom_css != blank -%}
      {%- assign mobile_custom_declarations = block.settings.mobile_custom_css | split: '}' -%}
      {%- for declaration in mobile_custom_declarations -%}
        {%- if declaration contains '{' -%}
          #DP--{{ block.id }} {{ declaration }} }
        {%- endif -%}
      {%- endfor -%}
    {%- endif -%}
  }


  [id^=DP--] {
    letter-spacing: -1px;
  }
  </style>
  {%- endfor -%}
  
  <div id="slideshow-{{ section.id }}">
      {%- for variant_image in variant_image_list -%}

        {%- comment -%} Images: check image crop aspect ratio {%- endcomment -%}
        {%- if section.settings.image_crop != 'none' -%}
          {%- assign image_crop_width = section.settings.image_crop | split: ':' | first | times: 1000 -%}
          {%- assign image_crop_height = section.settings.image_crop | split: ':' | last | times: 1000 -%}
        {%- endif -%}

        {%- assign mobile_image_crop_width = block.settings.mobile_background_image.width | default: image_crop_width -%}
        {%- assign mobile_image_crop_height = block.settings.mobile_background_image.height | default: image_crop_height -%}

        <div id="DP--slide-{{ forloop.index }}" class="dsgn-pck__slide dsgn-pck__background" data-slideshow-index="{{ forloop.index0 }}">
          {%- if section.settings.link != blank and section.settings.button_label == blank -%}
            <a class="dsgn-pck__absolute-link" href="{{ section.settings.link }}">{{ section.settings.link.title }}</a>
          {% endif %}
          <style>
            #DP--slide-{{ forloop.index }} .dsgn-pck__image__wrapper img {
              object-position: {{ block.settings.focal_point }};
            }

            #DP--slide-{{ forloop.index }} picture::after {
              background: {{ background_color }};
            }

          </style>
          <div class="dsgn-pck__image__wrapper">
            <svg class="dsgn-pck__mobile--hidden" viewBox="0 0 {{ image_crop_width }} {{ image_crop_height }}"></svg>
            <svg class="dsgn-pck__mobile--visible dsgn-pck__desktop--hidden" viewBox="0 0 {{ mobile_image_crop_width }} {{ mobile_image_crop_height }}"></svg>
            <picture>
            {%- if variant_image != blank -%}
              {%- if block.settings.mobile_background_image != blank -%}
                <source media="(max-width: 480px)" srcset="{{ block.settings.mobile_background_image | image_url: width: 960 }}">
              {%- endif -%}
                {{ variant_image | image_url: width: 5000 | image_tag: loading: 'lazy', widths: widths, sizes: '100vw' }}
            {%- endif -%}
            </picture>
          </div>
        </div>
      {%- endfor -%}
  </div>
</section>
{%- endcapture -%}
