<div class="section_like-product mobile-block">
  <h5>{{section.settings.title}}</h5>
  
  <!-- Slider main container -->
  <div class="swiper LikeSwiper LikeSwiperMobile">
    <!-- Additional required wrapper -->
    <div class="swiper-wrapper">
      <!-- Slides -->
      
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'slide' %}
      		<div class="swiper-slide">
              <div class="section_like-item">
            
                <h3 class="like-title">{{block.settings.product_slide.title}}<span class="devider"></span>{{block.settings.product_slide.price | money }}</h3>
                <a href="{{block.settings.product_slide.url}}" class="like-img" style="background-image: url({{block.settings.product_slide | img_url: '360x'}})"></a>
                <form action="/cart/add" method="post" enctype="multipart/form-data">
                  <div class="like_button-block">
                    <div class="like-option">
                      {% for color_option in block.settings.product_slide.variants %}
                      	<label>
                          <input class="like_input_color" type="radio" {% if forloop.first%}checked{% endif %} name="id" value="{{color_option.id}}" data-image="{{ color_option.featured_image | product_img_url: '600x' }}">
                          <span class="{{ color_option.title | downcase | truncatewords: 1, ""}}-color"><i></i></span>
                      	</label>
                      {% endfor %}
                    </div>
                    <div class="like_button-block-right">
                       <button type="button" name="add" class="add_to_cart ajax-submit like__btn_cart" data-label="Add to Cart">
                        <i><img src="{{'cart_bg_btn.svg' | asset_url }}"></i>Add to Cart
                      </button>
                    </div>
                  </div>
                </form>
              </div>
            </div>
      
        {% endcase %}
      {% endfor %}
      
      
