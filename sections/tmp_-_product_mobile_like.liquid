{% schema %}
  {
    "name": "Mobile Like Products",
	"class": "prod_mobLike",
    "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Like Products Title"
    }
  ],
  "blocks": [
     {
       "name": "Product",
       "type": "slide",
       "settings": [
         {
           "type": "product",
           "id": "product_slide",
           "label": "product"
         }
       ]
     }
   ]
  }
{% endschema %}

{% stylesheet %}

.section_like-product{
	padding: 80px 0 100px;
	background: #D8EBFB;
}
.section_like-product h5{
	text-align: center;
/* 	font-family: KlarheitKurrent; */
  	font-weight: 700;
  	margin-bottom: 50px;
  	text-transform: capitalize;
  	font-size: 32px;
}
.LikeSwiper.swiper{
	height: 400px;
	max-width: 1280px;
	margin: 0 auto;
	padding: 0 80px;
}
.LikeSwiper.swiper::before, .LikeSwiper.swiper::after{
	content: '';
	background: #D8EBFB;
	position: absolute;
	height: 100%;
	top: 0;
	bottom: 0;
	width: 80px;
	z-index: 2;
}
.LikeSwiper.swiper::before{
	left: 0;
}
.LikeSwiper.swiper::after{
	right: 0;
}
.section_like-item{
	max-width: 365px;
	margin: 0 auto;
}
.section_like-item .like-img{
	width: 100%;
	height: 260px;
    background-repeat: no-repeat;
    background-size: cover;
	display: block;
}
.like-title{
/*     font-family: AvertaCY; */
    font-size: 18px;
    color: #2e3054;
    text-transform: inherit;
    letter-spacing: .04em;
    padding: 0;
    font-weight: 600;
}
.devider {
	border-left: 1px solid #2E3054;
	margin: 0 15px;
}
.like__btn_cart {
    width: 140px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: transparent;
    border-radius: 6px;
    font-size: 14px;
    font-weight: 600;
/*     font-family: AvertaCY; */
    color: #2E3054;
    margin-top: auto;
	border: 1px solid #2E3054;
	transition: all 0.4s ease;
}
.like__btn_cart:hover{
	background: #fff;
}
.like__btn_cart i {
    display: flex;
    margin-right: 8px;
}
.like-img {
  background-color: #f8f9fd;
  background-position: center;
}
.like_button-block{
	display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
	margin-top: 20px;
}
.like_button-block label{
	margin-right: 10px;
	cursor: pointer;
	position: relative
	margin-bottom: 0;
}
.like_button-block label input{
	display: none;
}
.like_button-block label span{
	border: #e2e2e2 1px solid;
	width: 55px;
	height: 25px;
	display: flex;
	position: relative;
}
.like_button-block label input + span i{
	display: none
}
.like_button-block label input:checked + span i{
	display: block;
	background: #2E3054;
	height: 2px;
	width: 100%;
	position:absolute;
	bottom: -10px;
}
.like_button-block label span.blue-color{
	background: #a3cbf1;
}
.like_button-block label span.white-color{
	background: #fff;
}
.like_button-block label span.clear-color{
	background: #D7E5F1;
}
.like_button-block label span.green-color{
	background: green;
}

.like-option{
	display: flex;
    flex-wrap: wrap;
	align-items: center;
}

