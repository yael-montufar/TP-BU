 	background-image: url("data:image/svg+xml;charset=UTF-8,%3csvg width='18' height='18' viewBox='0 0 18 18' fill='none' xmlns='http://www.w3.org/2000/svg'%3e%3cpath fill-rule='evenodd' clip-rule='evenodd' d='M8.78033 3.96967C9.07322 4.26256 9.07322 4.73744 8.78033 5.03033L5.56066 8.25H14.25C14.6642 8.25 15 8.58579 15 9C15 9.41421 14.6642 9.75 14.25 9.75H5.56066L8.78033 12.9697C9.07322 13.2626 9.07322 13.7374 8.78033 14.0303C8.48744 14.3232 8.01256 14.3232 7.71967 14.0303L3.21967 9.53033C2.92678 9.23744 2.92678 8.76256 3.21967 8.46967L7.71967 3.96967C8.01256 3.67678 8.48744 3.67678 8.78033 3.96967Z' fill='%232E3054'/%3e%3c/svg%3e ") !important;
	background-repeat: no-repeat;
    background-position: center;
} 
.LikeSwiper .swiper-button-next {
	background-image: url("data:image/svg+xml;charset=UTF-8,%3csvg width='18' height='18' viewBox='0 0 18 18' fill='none' xmlns='http://www.w3.org/2000/svg'%3e%3cpath fill-rule='evenodd' clip-rule='evenodd' d='M9.21967 3.96967C8.92678 4.26256 8.92678 4.73744 9.21967 5.03033L12.4393 8.25H3.75C3.33579 8.25 3 8.58579 3 9C3 9.41421 3.33579 9.75 3.75 9.75H12.4393L9.21967 12.9697C8.92678 13.2626 8.92678 13.7374 9.21967 14.0303C9.51256 14.3232 9.98744 14.3232 10.2803 14.0303L14.7803 9.53033C15.0732 9.23744 15.0732 8.76256 14.7803 8.46967L10.2803 3.96967C9.98744 3.67678 9.51256 3.67678 9.21967 3.96967Z' fill='%232E3054'/%3e%3c/svg%3e ") !important;
	background-repeat: no-repeat;
    background-position: center;
}
.LikeSwiper .swiper-button-prev::after, .LikeSwiper .swiper-button-next::after{
	display: none;
}
.LikeSwiper .swiper-button-prev, .LikeSwiper .swiper-button-next{
	width: 48px;
    height: 48px;
    background-color: #fff;
    border-radius: 50%;
}

.LikeSwiper .swiper-pagination-bullet {
    background: white;
    opacity: 1;
    width: 8px;
}

.LikeSwiper .swiper-pagination-bullet.swiper-pagination-bullet-active {
	border: 2px solid #2E3054;
}

{% endstylesheet %}

{% javascript %}

	const swiper = new Swiper('.LikeSwiper.LikeSwiperMobile', {
      // Optional parameters
      loop: true,
        spaceBetween: 5,
         autoplay: {
           delay: 5000,
         },

          breakpoints: {
            100: {
              slidesPerView: 1,
              spaceBetween: 40,
			  navigation: false,
		      pagination: {
                el: '.swiper-pagination',
              },
            },
            1000: {
              slidesPerView: 1,
              spaceBetween: 40,
              navigation: {
                nextEl: '.swiper-button-next',
                prevEl: '.swiper-button-prev',
              }
            }
          },
 

      // Navigation arrows


      },
    );	


	const inputColorBtns = document.querySelectorAll(".prod_mobLike .like_input_color");

    inputColorBtns.forEach((buttonColor) => {
      buttonColor.onclick = function () {
		const imgUrl = buttonColor.getAttribute('data-image');
       	buttonColor.parentElement.parentElement.parentElement.parentElement.parentElement.parentElement.querySelector(".like-img").style.backgroundImage = "url('"+imgUrl+"')"; ;

      };
    }); 

{% endjavascript %}
